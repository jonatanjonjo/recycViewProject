<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#6200EE" /> <!-- Accent color when focused -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Light border for default state -->
        </shape>
    </item>

</selector>