<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFBB33" /> <!-- Orange background -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Focused State -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFDD55" /> <!-- Light yellow background -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <stroke android:width="2dp" android:color="#CCCCCC" /> <!-- Light gray border -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>